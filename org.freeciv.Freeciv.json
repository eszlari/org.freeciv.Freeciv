{
    "app-id": "org.freeciv.Freeciv",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--persist=.freeciv",
        "--share=ipc",
        "--socket=x11",
        "--share=network",
        "--socket=pulseaudio"
    ],
    "command": "freeciv-gtk3.22",
    "rename-appdata-file": "freeciv-gtk3.22.appdata.xml",
    "rename-desktop-file": "freeciv-gtk3.22.desktop",
    "rename-icon": "freeciv-client",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "*.la", "*.a"
    ],
    "modules": [
        {
            "name": "freeciv",
            "config-opts": [
                "--enable-client=gtk3.22",
                "--without-freeciv-manual"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://files.freeciv.org/stable/freeciv-2.6.2.tar.bz2",
                    "sha256": "6181ef3d3c76264383aabbe0eaf1550d8a65ca42639e6c17cc2938165e176c8f"
                },
                {
                    "type": "patch",
                    "path": "freeciv-appdata.patch"
                }
            ]
        }
    ]
}
